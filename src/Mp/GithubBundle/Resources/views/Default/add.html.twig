{% extends 'MpGithubBundle:Default:index.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    {% if form.branchName is defined %}
        <div class="form-group">
            {{ form_row(form.branchName) }}
        </div>
    {% endif %}

    <div class="form-group">
        {{ form_row(form.fileName) }}
    </div>

    <div class="form-group">
        {{ form_row(form.fileContent) }}
    </div>

    {{ form_row(form.create) }}
    {{ form_end(form) }}
{% endblock %}